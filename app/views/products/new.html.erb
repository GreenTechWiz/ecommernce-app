<h1>Add New Product</h1>

<%= form_tag("/products", method: :post) do %>
  <div class="row">
    <div class="col-md-6 form-group">
      <%= label_tag(:name, 'Enter Product:') %>
      <%= text_field_tag(:name, nil, class: "form-control") %>
    </div> 

    <div class="col-md-6 form-group">
      <%= label_tag(:category_id, "Select a Product Category:") %>
      <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name), prompt: "Select Product Category", class: "form-control")%>
    </div>
  </div>


  <div class="form-group">
    <%= label_tag(:description, 'Enter Description') %>
    <%= text_area_tag(:description, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:image_tag, "Enter a URL to your product's image:") %>
    <%= text_field_tag(:image_tag, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:price, 'Enter Price') %>
    <%= number_field_tag(:price, nil, class: "form-control") %>
  </div>

    <%= submit_tag("Add Product") %>
  </div>
<% end %>